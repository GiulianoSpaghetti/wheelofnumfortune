<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wheelofnumfortune.MainPage"
             Title="Wheel of numerone's fortune">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Editor x:Name="lblFortune" IsReadOnly="True" AutoSize="TextChanges"/>
            <Button Text="Refresh" Clicked="OnRefresh_Click" />
            <Editor x:Name="txtSolution"  IsEnabled="False" AutoSize="TextChanges"/>
            <Button x:Name="btnCheck" Text="Check Solution" Clicked="CheckSolution_Click" IsEnabled="False"/>
            <Button x:Name="btnDiscover" Text="Discover letter" Clicked="DiscoverLetter_Click" IsEnabled="False"/>
            <Label x:Name="lblStatus" TextType="Html"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
