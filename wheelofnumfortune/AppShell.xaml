<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="wheelofnumfortune.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:wheelofnumfortune"
    Title="wheelofnumfortune"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Shell.TabBarIsVisible="False">
        <ShellContent x:Name="scapplicazione" Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="Main"/>
        <ShellContent x:Name="scinformazioni" Title="Informations" ContentTemplate="{DataTemplate local:InfoPage}" Route="Informazioni"/>
    </FlyoutItem>

</Shell>
